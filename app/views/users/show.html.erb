<div class="container">
  <div class="row mb-3">
    <% if @user == current_user %>
      <h2 class="mx-auto">マイページ</h2>
    <% else %>
      <h2 class="mx-auto"><%= @user.name %>のページ</h2>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-3 text-center mb-5">
      <h2>プロフィール
      </h2>
      <h3><%= @user.name %></h3>
      <% if @user == current_user %>
        <%= link_to edit_user_path(@user), class: "d-block btn btn-outline-secondary mt-3 mx-3" do %>
          <span><i class="fa-solid fa-user-pen"></i>編集</span>
        <% end %>
      <% end %>
    </div>
    <div class="col-sm-9">
      <h2 class="text-center">投稿</h2>
      <%= render "posts/post", posts: @posts %>
    </div>
  </div>
</div>