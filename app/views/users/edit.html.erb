<div class="col-11 col-md-8 col-lg-5 col-xl-4 mx-auto">
  <div class="card mt-5">
    <div class="card-body">
      <h2 class="card-title text-center">プロフィール編集</h2>
      <hr>
      <%= render "layouts/error", error: @user %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更", class: "btn btn-lg w-100 btn-outline-success mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>