<div class="navbar navbar-expand-lg navbar-dark bg-secondary">
  <a class="navbar-brand mr-sm-auto ml-sm-0 mx-auto pt-0" href="/">PhotoSense</a>
  <div class="d-flex mx-auto mx-sm-0 flex-grow-1">
    <% if user_signed_in? %>
      <%= search_form_for @q, url: search_posts_path, class: "form-inline flex-grow-1 flex-nowrap ml-0 ml-sm-3" do |f| %>
        <%= f.search_field :name_cont, placeholder: "検索：例）food", class: "form-control" %>
        <button type="submit" class="btn btn-dark" name="commit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      <% end %>
    <% end %>
    <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
  <div class="collapse navbar-collapse ml-auto" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <%= link_to root_path, class: "nav-link" do %>
          <i class="fa-solid fa-house"></i> ホーム
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to user_path(current_user), class: "nav-link" do %>
            <i class="fa-solid fa-address-card"></i> マイページ
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_post_path, class: "nav-link" do %>
            <i class="fa-solid fa-pen-to-square"></i> 新規投稿
          <% end %>
        </li>
        <div class="dropdown nav-item">
          <button class="btn btn-secondary dropdown-toggle nav-link" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa-solid fa-list"></i> 一覧
          </button>
          <div class="dropdown-menu bg-light" aria-labelledby="dropdownMenuButton">
            <%= link_to posts_path, class: "nav-link dropdown-item text-secondary ml-2 ml-lg-0" do %>
              <i class="fa-solid fa-image"></i> 写真
            <% end %>
            <%= link_to users_path, class: "nav-link dropdown-item text-secondary ml-2 ml-lg-0" do %>
              <i class="fa-solid fa-users"></i> ユーザー
            <% end %>
          </div>
        </div>
        <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
            <i class="fa-solid fa-right-from-bracket"></i> ログアウト
          <% end %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to new_user_registration_path, class: "nav-link" do %>
            <i class="fa-solid fa-user-plus"></i> サインアップ
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "nav-link" do %>
            <i class="fa-solid fa-right-to-bracket"></i> ログイン
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>