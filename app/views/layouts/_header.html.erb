<div class="navbar navbar-expand-lg navbar-dark bg-secondary p-3">
  <a class="navbar-brand mr-auto" href="/">Vision</a>
  <div class="d-flex">
    <% if user_signed_in? %>
      <%= search_form_for @q, url: search_posts_path, class: "form-inline flex-grow-1 flex-nowrap ml-md-3 my-2 my-lg-0" do |f| %>
        <%= f.search_field :name_cont, placeholder: "検索", class: "form-control" %>
        <%= f.submit '検索', class: "btn btn-dark" %>
      <% end %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
  <div class="collapse navbar-collapse ml-auto" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item"><%= link_to "ホーム", root_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "マイページ", user_path(current_user), class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "新規投稿", new_post_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "投稿一覧", posts_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ユーザ一覧", users_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
      <% else %>
        <li class="nav-item"><%= link_to "ホーム", root_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "サインアップ", new_user_registration_path, class: "nav-link" %></li>
      <% end %>
    </ul>
  </div>
</div>