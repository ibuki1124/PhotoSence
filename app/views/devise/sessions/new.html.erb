<div class="col col-md-8 col-lg-6 m-5 mx-sm-auto border bg-light">
  <h2 class="text-center my-4">ログイン</h2>
  <hr>
  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="form-group row">
      <%= f.label :name, "ユーザ名", class: "col-sm-3 col-form-label" %>
      <div class="col-sm">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, "パスワード", class: "col-sm-3 col-form-label" %>
      <div class="col-sm">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="form-group d-flex justify-content-between">
      <div><%= render "devise/shared/links" %></div>
      <%= f.submit "ログイン", class: "btn btn-success" %>
    </div>
  <% end %>
</div>