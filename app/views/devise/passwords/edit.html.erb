<div class="col">
  <h2><%= t(".change_your_password") %></h2>
  <%= form_with model: @user, url: user_password_path, method: :patch do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-group">
      <%= f.label :password, t(".new_password") %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length}文字以上" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, t(".confirm_new_password") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="form-group">
      <%= f.submit t(".change_my_password") %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
