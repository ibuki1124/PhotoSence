<div class="col">
  <h2><%= t(".forgot_your_password") %></h2>
  <%= form_with model: @user, url: user_password_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com" %>
    </div>
    <div class="form-group">
      <%= f.submit t(".send_me_reset_password_instructions") %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>