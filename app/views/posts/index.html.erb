<h2>タグ検索</h2>
<%= search_form_for @q, url: search_posts_path do |f| %>
  <%= f.search_field :name_cont %>
  <%= f.submit '検索' %>
<% end %>

<h2>投稿一覧</h2>

<% @posts.each do |vision| %>
  <div>
    <%= link_to post_path(vision) do %>
      <%= vision.title %> <br>
      <%= image_tag vision.get_vision_image(400, 400) %>
    <% end %>
  </div>
<% end %>