<div class="row justify-content-center align-items-center">
  <div class="col-11 col-md-8 col-lg-5 col-xl-4 mx-auto">
    <div class="card mt-5">
      <div class="card-body">
        <h2 class="card-title text-center">タイトル編集</h2>
        <hr>
        <%= render "layouts/error", error: @post %>
        <%= form_with model: @post do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "確定", class: "btn btn-lg w-100 btn-outline-success mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>